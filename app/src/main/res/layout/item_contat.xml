<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/contactListRootRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_8sdp">

        <RelativeLayout
            android:id="@+id/RL_IMG"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="wrap_content">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FLOAT"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimaryDark"
                app:elevation="0dp" />

            <TextView
                android:id="@+id/TXT_FIRST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="A"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/LL_RIGHT"
            android:layout_toRightOf="@+id/RL_IMG"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp">

            <TextView
                android:id="@+id/TXT_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/TXT_NUMBER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91555"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/IMG_SYNC"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_alignParentEnd="true"
            android:scaleType="center"
            android:src="@drawable/ic_sync" />

        <LinearLayout
            android:id="@+id/LL_RIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_cbc_invite"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_34sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cbc_invite"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/IMG_CBC_CHAT"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_34sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_chat"/>

            <ImageView
                android:id="@+id/IMG_CALL"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_34sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_telephone_line" />

            <ImageView
                android:id="@+id/IMG_CBC_VIDEO"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_34sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_video_camera" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>