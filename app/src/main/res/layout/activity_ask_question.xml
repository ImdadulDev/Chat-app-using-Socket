<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ActivityAskQuestion">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_splash" />

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_90sdp">

            <ImageView
                android:id="@+id/IMG_BACK"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_gravity="left"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/bg_rounded_linebox"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TXT_QUESTION1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="Security Question 1"
                    android:inputType="text"
                    android:onClick="onClick"
                    android:textColor="@android:color/white"
                    android:textColorHint="#2DD3FC" />

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_circle_white"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_security_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/bg_rounded_linebox"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/EDX_ANS1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="Write answer here"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="#2DD3FC" />

                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical|end"
                    android:text="Ans:"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/bg_rounded_linebox"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TXT_QUESTION2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="Security Question 2"
                    android:inputType="text"
                    android:onClick="onClick"
                    android:textColor="@android:color/white"
                    android:textColorHint="#2DD3FC" />

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_circle_white"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_security_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/bg_rounded_linebox"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/EDX_ANS2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="Write answer here"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="#2DD3FC" />

                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical|end"
                    android:text="Ans:"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/BTN_SIGNUP"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="@dimen/_5sdp"
                android:text="CONFIRM"
                android:textColor="#091C3D"
                android:textSize="@dimen/_16sdp" />


            <TextView
                android:id="@+id/TXT_FORGOT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:onClick="onClick"
                android:padding="@dimen/_5sdp"
                android:text="Forgot security questions &amp; answers"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/RLfooter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_footer"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_3sdp"
            android:gravity="center"
            android:text="It's not my device? "
            android:textColor="#848ca3"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/TXT_SignIn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_3sdp"
            android:gravity="center"
            android:onClick="onClick"
            android:text=" Skip"
            android:textColor="#091C3D"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>


</RelativeLayout>