<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:elevation="@dimen/_6sdp"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints"
        android:visibility="gone">

        <EditText
            android:id="@+id/EDX_phoneno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search"
            android:inputType="textPersonName" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/LL_NO_CONTACT_FOUND"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_cloud_computing"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:text="No contact found from server"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/BTN_IMPORTDEVICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="@dimen/_5sdp"
            android:text="  Import Device Contacts  "
            android:textColor="@android:color/white" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RECV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp"/>


</LinearLayout>