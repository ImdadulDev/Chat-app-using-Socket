<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/rlMyMessageParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivMyMessageUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/description" />

        <TextView
            android:id="@+id/ivMyMessageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivMyMessageUserImage"
            android:layout_toStartOf="@+id/ivMyMessageTime"
            android:lines="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:gravity="start|center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"/>

        <TextView
            android:id="@+id/ivMyMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:fontFamily="@font/raleway_regular"/>

        <TextView
            android:id="@+id/ivMyMessageTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMyMessageTitle"
            android:layout_toEndOf="@+id/ivMyMessageUserImage"
            android:padding="2dp"
            android:lines="1"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/raleway_regular"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>