<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout"
    android:background="@drawable/ui_bottom_grey_border_white_bg"
    android:padding="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSelectContactUserImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chat_person"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start|center"
        android:gravity="start"
        android:padding="5dp"
        android:layout_marginStart="40dp">

        <TextView
            android:id="@+id/tvselectContactUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="start"
            android:padding="5dp"
            android:textColor="@color/black_800"
            android:fontFamily="@font/raleway_regular"/>

        <TextView
            android:id="@+id/tvSelectContactUserMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="start"
            android:padding="5dp"
            android:fontFamily="@font/raleway_regular"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/selectedCheckedImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|center_vertical"
        android:padding="5dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_green_right"
        android:visibility="visible"
        android:contentDescription="@string/description" />

</FrameLayout>